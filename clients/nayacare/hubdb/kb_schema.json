    {
      "name": "content",
      "label": "Content",
      "type": "richtext",
      "options": {
        "required": true
      }
    },
    {
      "name": "author",
      "label": "Author",
      "type": "text",
      "options": {
        "required": true
      }
    },
    {
      "name": "reviewed_by",
      "label": "Reviewed By",
      "type": "text"
    },
    {
      "name": "review_date",
      "label": "Review Date",
      "type": "date"
    },
    {
      "name": "expiry_date",
      "label": "Expiry Date",
      "type": "date",
      "options": {
        "help_text": "When this content should be reviewed/updated"
      }
    },
    {
      "name": "source_url",
      "label": "Source URL",
      "type": "url"
    },
    {
      "name": "tags",
      "label": "Tags",
      "type": "text",
      "options": {
        "help_text": "Comma-separated tags for search"
      }
    },
    {
      "name": "version",
      "label": "Version",
      "type": "text",
      "options": {
        "default": "1.0"
      }
    },
    {
      "name": "embedding",
      "label": "Embedding",
      "type": "text",
      "options": {
        "help_text": "JSON string of vector embedding for semantic search"
      }
    },
    {
      "name": "is_active",
      "label": "Active",
      "type": "boolean",
      "options": {
        "default": true
      }
    }
